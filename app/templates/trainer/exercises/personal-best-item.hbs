<div class="row">
  <div class="col-md-2 visible-md visible-lg text-center">
    <span class="gc-exercises-bests-icon">
      <img src="app/images/icon-cup-blue.png" alt="">
    </span>
  </div>
  <div class="col-xs-10 col-md-8">
    <h6>{{date created_at}}</h6>
  </div>
  <div class="col-xs-2 col-md-2 gc-exercises-bests-delete-wrapper">
    <button class="btn btn-danger gc-exercises-bests-delete">
      <i class="fa fa-trash"></i>
    </button>
  </div>
</div>
{{#each results}}
<div class="row gc-exercises-bests-result">
  <div class="col-xs-12 col-md-8">{{name}}</div>
  <div class="col-xs-6 col-xs-offset-1 col-md-4 col-md-offset-0">{{value}}</div>
</div>
{{/each}}
