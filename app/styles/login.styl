@font-face
  font-family: 'KievitPro-Regular'
  src: url('../fonts/KievitPro-Regular.eot')
  src: local('â˜º'), url('../fonts/KievitPro-Regular.woff') format('woff'), url('../fonts/KievitPro-Regular.ttf') format('truetype'), url('../fonts/KievitPro-Regular.svg') format('svg')
  font-weight: normal
  font-style: normal

body.auth
  height: 100vh
  background: #121827 url('../images/header-login.png') no-repeat
  background-size: cover
  overflow: auto

.page-wrap
  height: 100%
  min-height: 100%

.page-wrap *
  font-family: 'KievitPro-Regular', Helvetica, Arial

.page-wrap .fa
  font-family: 'FontAwesome'

.page-wrap .glyphicon
  font-family: 'Glyphicons Halflings'

.gc-landing .page-wrap
  min-height: 100%
  margin-bottom: 0px

.page-wrap:after
  content: ""
  display: block

.gc-header-standard
  background: rgba(18,24,39,1)

.gc-header-standard > .container
  min-height: 40px

.gc-blog-slider
  min-height: 540px
  max-height: 540px

.gc-blog-slider .carousel-indicators
  display: none

.gc-landing
  background: rgba(18,24,39,1)

.gc-header-login
  background: transparent

.gc-header-login > .container
  min-height: 0px
  height: 100%

.gc-login-form-wrapper
  margin: 2% auto 0
  float: none
  max-width: 510px
  padding: 0

.gc-login-form-wrapper > h1
  background: #257fcc
  margin: 0
  padding: 10px 25px
  color: #fff
  font-size: 18px
  font-weight: bold
  border-radius: 5px 5px 0 0

.gc-login-form-wrapper form
  background: #fff
  padding: 10px 15px
  border-radius: 0 0 5px 5px

.gc-login-social
  margin: 0

.gc-login-social > div
  padding: 5px 0

.gc-login-social .btn
  font-size: 15px
  color: #fff
  padding: 12px 18px
  border-radius: 50px

.gc-login-social .btn .fa
  font-size: 18px
  position: relative
  bottom: -2px
  margin-right: 1rem

.gc-login-social .btn-danger
  background-color: #dd4b39

.gc-login-social .btn-primary
  background-color: #1f57b5

.form-group-radio.gc-invalid label
  color: #ff560a

.gc-login-form-wrapper
  form
    .form-group
      padding: 0 15px
      position: relative

    label
      font-size: 13px
      font-weight: normal
      color: #a6a7aa
      font-weight: 400

    .checkbox
      label
        font-size: 12.5px
        color: #a6a7aa

      input
        margin: 3px 0 0 -18px

    .form-control
      height: 45px
      font-size: 16px

    .gc-invalid .checkbox label
      color: #ff560a

    [type=submit],
    .gc-form-submit-button
      color: #3a99d8
      padding: 10px 28px
      border-radius: 50px
      font-weight: bold
      text-transform: uppercase
      border: 2px solid #3a99d8
      margin-top: 20px
      font-size: 18px
      line-height: 24px

      &:hover,
      &:focus,
      &:active,
        background: transparent
        outline: none

      &:hover
        background-color: #3a99d8
        color: #fff

.gc-login-signup-wrapper
  color: #a6a7aa
  margin-top: 25px

.gc-login-signup-wrapper a
  color: #3a99d8

.forgot-password-link
  font-size: 13px

.gc-forgot-password-text
  font-size: 15px
  line-height: 17px
  color: #404447
  text-align: center
  margin: 30px 0 35px 0

.gc-cancel-forgot-password
  font-size: 15px
  line-height: 48px
  height: 48px
  margin: 20px 10px 0 0
  color: rgba(64, 68, 71, 0.5)
  text-transform: uppercase
  display: inline-block
  vertical-align: top

.gc-trainer-type-wrapper,
.gc-signup-checkbox-wrapper
  margin: 25px 0 40px 0
  padding: 0

.gc-trainer-type-wrapper li,
.gc-signup-checkbox-wrapper li
  display: inline-block
  padding: 0
  text-align: center

.gc-trainer-type,
.gc-signup-checkbox
  border: 1px solid #C9C9C9
  border-radius: 3px
  width: 132px
  height: 131px
  margin: 0
  transition: all 0.3s linear 0.05s

.gc-trainer-type:hover,
.gc-signup-checkbox:hover
  cursor: pointer

.gc-trainer-type.active,
.gc-signup-checkbox.active
  border-color: #5db0f4
  box-shadow: inset 0 0 4px 0 #5db0f4

.gc-trainer-type span,
.gc-signup-checkbox span
  font-size: 13px
  line-height: 15px
  color: #404447
  margin-top: 75px
  display: inline-block
  font-weight: normal

.gc-trainer-type-not span,
.gc-signup-checkbox-not span
  margin-top: 65px

.gc-trainer-type input,
.gc-signup-checkbox input
  display: none

.gc-signup-checkbox
  width: 90%
  height: 85px

  span
    margin-top: 28px
    float: right
    font-size: 15px
    color: #434343
    text-align: left
    width: 47%

.gc-have-trainer-icon
  background: transparent url('../images/have-trainer.png') 17% center no-repeat

.gc-not-have-trainer-icon
  background: transparent url('../images/not-have-trainer.png') 17% center no-repeat

.gc-have-trainer-icon,
.gc-not-have-trainer-icon
  span
    width: 51%

.gc-user-type-trainer
  background: transparent url('../images/signup-type-1.png') 30% center no-repeat

.gc-user-type-client
  background: transparent url('../images/signup-type-3.png') 30% center no-repeat

.gc-trainer-type-personal
  background: transparent url('../images/signup-type-1.png') 50% 20px no-repeat

.gc-trainer-type-couch
  background: transparent url('../images/signup-type-2.png') 50% 20px no-repeat

.gc-trainer-type-not
  background: transparent url('../images/signup-type-3.png') 50% 20px no-repeat

.gc-not-trainer-message,
.gc-matching-trainer-message
  text-align: center
  font-size: 16px
  color: #434343
  margin-bottom: 40px

.gc-finish-btn
  min-width: 200px
  margin-bottom: 40px

.gc-back-btn,
.gc-invite-btn
  margin-bottom: 50px

.gc-almost-ready-icon
  display: block
  width: 60px
  height: 70px
  margin: 20px auto 30px
  background: url('../images/almost-ready.png') no-repeat

form .checkbox
  margin-top: 30px

.form-group input[type=radio]
  margin: 0

.gc-signup-with-email-title
  font-size: 13px
  text-align: center
  margin: 0 0 25px 0

.gc-trainer-invite-title
  font-size: 16px
  text-align: center
  margin: 0 0 25px 0

  .gc-have-trainer-icon
    margin: 30px auto 15px auto
    width: 52px
    height: 43px

#gc-signup-message .modal-body p
  font-size: 16px
  margin: 0

.gc-nav-top
  background: #121827
  z-index: 998

.gc-nav-top > .container
  position: relative

.gc-nav-top .navbar-brand
  padding: 12px 15px

.gc-nav-top .navbar-brand img
  max-height: 27px

.gc-nav-top .icon-bar
  background: white

.checkbox.gc-invalid span
  color: #ff560a

.gc-reset-password-img-wrapper
  text-align: center

.gc-reset-password-image
  margin: 40px 0 30px

.gc-reset-password-text
  text-align: center
  margin-bottom: 20px

.client-reg-type-select
  margin: 50px 39px 25px 39px
  display: flex
  flex-flow: column


  label
    padding: 35px
    display: flex
    align-items: center

    &:first-child
      border-bottom: 1px solid #eaeaea

    &.invite-pro:before
      content: ""
      display: block
      width: 52px
      height: 43px
      background: transparent url('../images/have-trainer.png') 17% center no-repeat

    &.request-pro:before
      content: ""
      display: block
      width: 52px
      height: 43px
      background: transparent url('../images/not-have-trainer.png') 17% center no-repeat

    .text
      width: 165px
      padding-left: 25px
      font-size: 16px
      font-weight: 400
      color: #555555

    input
      display: none

    .radio-button
      width: 39px
      height: 39px
      margin-left: auto
      background-color: #cfe3f4
      border-radius: 50%
      transition: all 0.5s ease

    input:checked + .radio-button
      border: 6px solid #cfe3f4
      background-color: #0074d9

.invite-sent-icon
  width: 81px
  height: 55px
  margin: 82px auto 23px auto
  background: transparent url('../images/invite_sent.svg') no-repeat

.waiting-gymcloud-pro
  width: 62px
  height: 82px
  margin: 82px auto 23px auto
  background: transparent url('../images/waiting_gymcloud_pro.svg') no-repeat

.find-a-pro
  width: 66px
  height: 52px
  margin: 82px auto 23px auto
  background: transparent url('../images/find_a_pro.svg') no-repeat

.send-reminder
  margin: auto
  display: block
  border: none
  background: none
  font-size: 16px
  font-weight: 700
  text-align: center
  color: #0074d9

@media (min-width: 768px)
  .gc-nav-top
    position: absolute
    background: transparent

  .gc-nav-top .navbar-brand
    padding: 40px 15px 0 15px
    height: auto

  .gc-nav-top .navbar-brand img
    max-height: 47px

  .gc-nav-top .navbar-header
    min-height: 110px

  .gc-nav-top .navbar-nav.navbar-right
    margin-top: 35px

  .gc-nav-top .navbar-nav > li:hover
    background: none

  .gc-nav-top .navbar-nav > li > a
    color: #3a99d8
    font-size: 17px
    padding: 14px 12px
    transition: .3s color

  .gc-nav-top .navbar-nav > li > a:hover,
  .gc-nav-top .navbar-nav > li > a:focus
    background: none
    color: white

  .gc-nav-top .navbar-nav > li.active > a
    background: none
    color: white

  .gc-nav-top .navbar-nav > li > a:active
    background: none
    color: white

  .gc-nav-top .navbar-nav > li > a > .glyphicon
    font-size: 12px

  .gc-header-standard > .container
    min-height: 600px

  .gc-login-form-wrapper
    position: relative
    margin: 17% auto 0 auto

  .gc-login-form-wrapper > h1
    padding: 25px

@media (min-width: 992px)
  .gc-login-social
    margin: 30px 0 30px 0

@media (min-width: 1200px)
  .gc-login-social .btn
    padding: 12px 27px
